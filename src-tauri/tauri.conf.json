{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tiny beast dictionary",
    "version": "1.2.3"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "writeFile": true,
        "readFile": true,
        "createDir": true,
        "readDir": true,
        "removeFile": true
      },
      "clipboard": {
        "all": false,
        "readText": true
      },
      "window": {
        "all": false,
        "center": true,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "setPosition": true,
        "setSize": true,
        "setTitle": true,
        "show": true
      },
      "shell": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/icon.png",
        "icons/32x32.png",
        "icons/128x128.png"
      ],
      "identifier": "com.dictionary",
      "longDescription": "tiny app for online/offline dictionaries. it works using google translate api and downloads dictionaries from kaikki.org to be used offline.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "settings.json"
      ],
      "shortDescription": "tiny app for online/offline dictionaries",
      "targets": [
        "deb",
        "msi"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Tiny Beast Dictionary",
        "fullscreen": false,
        "minWidth": 290,
        "width": 290,
        "minHeight": 220,
        "height": 220,
        "resizable": true,
        "center": true,
        "transparent": true
      }
    ]
  }
}